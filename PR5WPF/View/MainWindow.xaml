<Window x:Class="PR5WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR5WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Button Content="Завтрак" VerticalAlignment="Center" Grid.Row="0" x:Name="B" Click="B_Click"></Button>
        <Button Content="Обед" VerticalAlignment="Center" Grid.Row="1" x:Name="L" Click="L_Click"></Button>
        <Button Content="Ужин" VerticalAlignment="Center" Grid.Row="2" x:Name="D" Click="D_Click"></Button>
    </Grid> 
</Window>
